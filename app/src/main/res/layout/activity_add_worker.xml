<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWorker">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="48dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/contentbar"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/addcust_drawer_btn"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/drawer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Add Worker"
                android:textSize="18sp"
                android:id="@+id/headertxt"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/logo"
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/A1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Name"
        android:layout_below="@id/cardView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="text"

            android:id="@+id/worker_name"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="0000000"
        android:layout_marginLeft="16dp"
        android:id="@+id/A2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@id/A1"
        android:layout_marginRight="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="number"
            android:id="@+id/worker_id_no"
            android:layout_height="wrap_content"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/A3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Worker D.O.B"
        android:layout_below="@id/A2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="date"
            android:focusable="false"

            android:id="@+id/worker_date_of_birth"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/A4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Email"
        android:layout_below="@id/A3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="textEmailAddress"

            android:id="@+id/worker_email"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/A5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Password"
        android:layout_below="@id/A4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="text"

            android:id="@+id/worker_password"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/A6"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Password"
        android:layout_below="@id/A5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <Spinner
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:outlineAmbientShadowColor="#000000"
            android:inputType="text"

            android:id="@+id/genderWorker"

            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:background="@drawable/button_bg"
        android:text="add worker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/add_worker_btn"
        android:layout_below="@id/A6"
        android:layout_height="wrap_content"/>

</RelativeLayout>