<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    tools:context=".DoneWork">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="48dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/contentbar"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/addcust_drawer_btn"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/drawer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Add Activity"
                android:textSize="18sp"
                android:id="@+id/headertxt"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/logo"
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:background="@color/white"
        android:layout_height="match_parent"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/activity"
            android:hint="please type the activity done"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"

                android:id="@+id/activity_done"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/activity"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/reason"
            android:layout_marginTop="30dp"
            android:hint="please type the reason"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:id="@+id/Reason_done"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/reason"
            android:layout_marginStart="10dp"
            android:id="@+id/code"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:hint="pleas scan nursery code"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:focusable="true"
                android:id="@+id/code_done"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_below="@+id/code"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Add Activity"
            android:layout_marginTop="30dp"
            android:id="@+id/addactivity_btn"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>